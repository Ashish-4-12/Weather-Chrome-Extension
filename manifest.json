{
  "name": "Weather app",
  "description": "app which display weather",
  "version": "0.0.1",
  "manifest_version": 3,

  "background": {
    "service_worker": "fetchData.js"
  },

  "action": {
    "default_popup": "./index.html",
    "default_icon": "./src/icons/icon_128.png"
  },

  "icons": {
    "16": "./src/icons/icon_16.png",
    "48": "./src/icons/icon_48.png",
    "128": "./src/icons/icon_128.png"
  },

  "permission": ["geolocation", "activeTab"]
}
